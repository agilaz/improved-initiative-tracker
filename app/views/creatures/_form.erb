<table>
    <th>Name</th>
    <td><%= f.text_field(:name) %></td>
  </tr>
  <tr>
    <th>Description</th>
    <td><%= f.text_area(:description, :size => '20x5') %></td>
  </tr>
  <tr>
  <td>
    <strong>AC</strong>
    <%= f.number_field(:armor_class, :in => 0..50) %>
  
    <strong>CMD</strong>
    <%= f.number_field(:combat_maneuver_defense, :in => 0..50) %>
  
    <strong>HP</strong>
    <%= f.number_field(:max_hit_points, :in => 0..1000) %>
  </td>
  </tr>
  <tr>
    <th>Str</th>
    <td><%= f.number_field(:strength, :in => 0..50) %></td>
  </tr>
  <tr>
    <th>Dex</th>
    <td><%= f.number_field(:dexterity, :in => 0..50) %></td>
  </tr>
  <tr>
    <th>Con</th>
    <td><%= f.number_field(:constitution, :in => 0..50) %></td>
  </tr>
  <tr>
    <th>Int</th>
    <td><%= f.number_field(:intelligence, :in => 0..50) %></td>
  </tr>
  <tr>
    <th>Wis</th>
    <td><%= f.number_field(:wisdom, :in => 0..50) %></td>
  </tr>
  <tr>
    <th>Cha</th>
    <td><%= f.number_field(:charisma, :in => 0..50) %></td>
  </tr>
  <tr>
    <th>Fort</th>
    <td><%= f.number_field(:fortitude, :in => -10..50) %></td>
  </tr>
  <tr>
    <th>Ref</th>
    <td><%= f.number_field(:reflex, :in => -10..50) %></td>
  </tr>
  <tr>
    <th>Will</th>
    <td><%= f.number_field(:will, :in => -10..50) %></td>
  </tr>
</table>