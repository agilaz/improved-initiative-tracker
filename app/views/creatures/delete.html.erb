<h1>Creatures#delete</h1>
<%= link_to("<< Back to creature list", creatures_path) %>
<%= form_for(@creature, :url => creature_path(@creature), :method => 'delete') do |f| %>

    <p>Do you want to delete this creature?</p>

    <%= render(:partial => 'stat_block', :locals => {:creature => @creature}) %>

    <div class="form-buttons">
      <%= f.submit("Delete Creature") %>
    </div>

<% end %>
