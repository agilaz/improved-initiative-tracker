<div class="col-md-6 col-md-offset-3">
  <center>Don't have an account yet? <%= link_to('Create new', users_new_path) %></center>
  <br><br>
  <% if flash[:notice] %>
      <center>
        <%= flash[:notice] %>
      </center>
  <% end %>
  <%= form_tag(access_try_login_path, :method => :post) do %>
      <center>
        <table>
          <tr>
            <td><strong>Username &nbsp</strong></td>
            <td><%= text_field_tag(:username, params[:username]) %></td>
          </tr>
          <tr>
            <td><strong>Password &nbsp</strong></td>
            <td><%= password_field_tag(:password) %></td>
          </tr>
        </table>
      </center>
      <br>
      <div class="col-md-4 col-md-offset-4">
        <%= submit_tag("Log in", :class => 'btn btn-block') %>

      </div>

  <% end %>
</div>