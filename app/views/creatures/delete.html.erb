<h1>Creatures#delete</h1>
<div class="col-md-6 col-md-offset-2">
  <%= render(:partial => 'main/main_table') %>
</div>
<div class="col-md-3">
  <div class="col-md-8 col-md-offset-2">
<%= link_to("<< Back to creature list", creatures_path) %>
<%= form_for(@creature, :url => creature_path(@creature), :method => 'delete') do |f| %>

    <p><strong>Are you sure you want to remove <%= @creature.name %> from the database?</strong></p>

    <%= render(:partial => 'stat_block', :locals => {:creature => @creature}) %>
</br>
        <%= f.submit("Delete   Creature", class: 'btn btn-danger col-md-8 col-md-offset-2') %>

<% end %>
    </div>
  </div>
